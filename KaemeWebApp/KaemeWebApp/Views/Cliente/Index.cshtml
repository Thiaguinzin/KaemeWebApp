@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Clientes </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Cliente" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> &nbsp;Novo Cliente
            </a>
        </div>
    </div>
    <br>


    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr id="row_@obj.Id" class="table-success" style="vertical-align: middle;" onclick="location.href = '@(Url.Action("View", "Cliente", new { id = obj.Id }))'">
                    <td>
                        @obj.Nome
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @obj.Celular
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>