@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Clientes </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Cliente" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> &nbsp;Novo Cliente
            </a>
        </div>
    </div>
    <br>


    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th></th>
                @*<th scope="col">Column heading</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr class="table-success" style="vertical-align: middle;">
                    <td>
                        @obj.Nome
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @obj.Celular
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            @*<button type="button" class="btn btn-outline-primary btn-sm"> <a asp-controller="Cliente" asp-action="Edit" asp-route-id="@obj.Id"> </a> <i class="bi bi-pencil-square"></i> Editar </button>*@
                            <a asp-controller="Cliente" asp-action="Edit" asp-route-id="@obj.Id"> 
                                <button type="button" class="btn btn-outline-primary btn-sm"> <i class="bi bi-pencil-square"></i> Editar  </button>
                            </a>
                        </div>
                    </td>
                </tr>


            }
        </tbody>
    </table>

</div>
